{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Execute",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "${cwd}\\scripts\\win32\\run.bat" 
      },
      "linux": {
        "command": "sh -x ${cwd}/scripts/linux/build/build_on_linux.sh"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Build",
      "windows": {
        "command": "nmake clean; nmake build" 
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Tests",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "nmake fmt; nmake clean; nmake tests" 
      },
      "linux": {
        "command": "make clean; make fmt; make tests"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
  ]
}
